<style>
    .mobile-menu-btn {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        z-index: 101;
    }
    .mobile-menu-btn span {
        display: block;
        width: 25px;
        height: 2px;
        margin: 5px 0;
        background: var(--light-text);
        transition: all 0.3s;
    }
    .nav-links {
        display: flex;
        list-style: none;
        transition: transform 0.3s ease;
    }
    .nav-links.active {
        transform: translateX(0);
    }
    /* Responsive Styles ähnlich wie bei dir */
    @media (max-width: 900px) {
        .nav-links {
            position: fixed;
            top: 0;
            right: 0;
            transform: translateX(100%);
            height: 100vh;
            width: 80%;
            max-width: 400px;
            background-color: var(--secondary-color);
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: -5px 0 15px rgba(0, 0, 0, 0.3);
            z-index: 100;
        }
        .nav-links li {
            margin: 1.5rem 0;
        }
    }
</style>

<button class="mobile-menu-btn" aria-label="Menü öffnen" id="mobile-menu-btn">
    <span></span>
    <span></span>
    <span></span>
</button>
<ul class="nav-links" id="nav-links">
    <li><a href={import.meta.env.BASE_URL}>Home</a></li>
    <li><a href="SchulungenPage">Schulungen</a></li>
    <li><a href="GutachtenPage">Gutachten</a></li>
    <li><a href="QualitaetskontrollePage">Qualitätskontrolle</a></li>
    <li><a href="BeratungPage">Beratung</a></li>
    <li><a href="KontaktPage">Kontakt</a></li>
</ul>

<script>
    // JS nur in dieser Komponente
    const btn = document.getElementById('mobile-menu-btn');
    const nav = document.getElementById('nav-links');

    btn.addEventListener('click', () => {
        nav.classList.toggle('active');
        btn.classList.toggle('active');
        document.body.classList.toggle('no-scroll');
    });

    // Klick außerhalb schließt das Menü
    document.addEventListener('click', (e) => {
        if (!e.target.closest('nav') && !e.target.closest('#mobile-menu-btn') && nav.classList.contains('active')) {
            nav.classList.remove('active');
            btn.classList.remove('active');
            document.body.classList.remove('no-scroll');
        }
    });
</script>
