---
import MobileMenu from "../components/MobileMenu";

interface Props {
    title?: string;
    description?: string;
}

const {
    title = "Baumeister Andreas Bauer - Allgemein beeideter und gerichtlich zertifizierter Sachverständiger",
    description = "Baumeister Andreas Bauer - Sachverständiger für Schulungen, Gutachten, Qualitätskontrolle und Beratung"
