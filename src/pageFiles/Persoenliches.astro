---
import KontaktAufnehmenButton from "../components/KontaktAufnehmenButton.astro"
import TimelineDateTitleText from "../components/TimelineDateTitleText.astro"
import CardTitleText from "../components/CardTitleText.astro";
---
<div class="page-header">
    <div class="container">
        <h1>Persönliches</h1>
    </div>
</div>

<section class="content-section">
    <div class="container">
        <div class="content-wrapper">
            <div class="profile-section">
                <div class="profile-info">
                    <h2>Baumeister Andreas Bauer</h2>
                    <p class="subtitle">Allgemein beeideter und gerichtlich zertifizierter Sachverständiger</p>

                    <div class="qualifications">
                        <h3>Qualifikationen</h3>
                        <ul>
                            <li>Allgemein beeidetere und Gerichtlich zertifizierter Sachverständiger</li>
                            <li>Experte von Austrian Standards</li>
                            <li>ON-AG 166.02 Wärmedämmverbundsysteme (WDVS)</li>
                            <li>ON-AG 207.02 Estriche sowie Putz und Mauermörtel</li>
                            <li>Experte der ÖAP (österreichische Arbeitsgemeinschaft Putz)</li>
                            <li>Experte der ARGE Fensterbank</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="career-section">
                <h2>Beruflicher Werdegang</h2>
                <div class="timeline">

                    <TimelineDateTitleText date="2006 - heute" title="Wärmedämmverbundsysteme" text="Spartenleiter für Wärmedemmverbundsysteme"/>

                    <TimelineDateTitleText date="März 2012" title="Baumeisterprüfung" text="Erfolgreicher Abschluss der Befähigungsprüfung zum Gewerbe Baumeister"/>

                    <TimelineDateTitleText date="August 2012" title="Firmengründung" text="Gründung des Architekturbüros Baumeister Andreas Bauer e.U."/>

                    <TimelineDateTitleText date="2014" title="Austrian Standards (Normungsinstitut)" text="Experte von Austrian Standards ON-AG 166.02 Wärmedämmverbundsysteme"/>

                    <TimelineDateTitleText date="2015" title="Gerichtssachverständiger WDVS" text="Allgemein beeideter und gerichtlich zertifizierter Sachverständiger für die Herstellung von Wärmedämmverbundsystemen"/>

                    <TimelineDateTitleText date="2016" title="Austrian Standards (Normungsinstitut)" text="Experte von Austrian Standards ON-AG 166.02 Estriche sowie Putz- und Mauermörtel"/>

                    <TimelineDateTitleText date="2019" title="ARGE Fensterbank" text="Experte der ARGE Fensterbank"/>

                </div>
            </div>

            <div class="expertise-section">
                <h2>Fachliche Schwerpunkte</h2>
                <div class="expertise-grid">
                    <CardTitleText title="Bauphysik" text="Wärmeschutz, Feuchteschutz, Schallschutz, Brandschutz"/>

                    <CardTitleText title="Wärmedämm-Verbundsysteme" text="Planung, Ausführung, Sanierung, Schadensanalyse"/>

                    <CardTitleText title="Bauschäden" text="Ursachenermittlung, Sanierungskonzepte, Gutachten"/>

                    <CardTitleText title="Qualitätssicherung" text="Baubegleitung, Abnahmen, Qualitätskontrollen"/>

                </div>
            </div>

            <div class="contact-cta">
                <p>Haben Sie Fragen oder möchten Sie mehr über meine Qualifikationen erfahren?</p>
                <KontaktAufnehmenButton />
            </div>
        </div>
    </div>
</section>

<style>
    .page-header {
        position: relative;
        color: var(--light-text);
        padding: 7rem 0 3rem;
        text-align: center;
        background-image: url('../assets/Qualitaetskontrolle_kl.jpg');
        background-size: cover;
        background-position: center;
        margin-top: -1rem;
    }

    .content-section {
        padding: 3rem 0;
    }

    .content-wrapper {
        max-width: 1000px;
        margin: 0 auto;
    }

    .subtitle {
        color: var(--light-text);
        opacity: 0.9;
    }

    .qualifications ul {
        margin-left: 1.5rem;
        color: var(--light-text);
    }

    .timeline {
        position: relative;
        margin: 2rem 0;
        padding-left: 1.5rem;
    }

    .timeline::before {
        content: "";
        position: absolute;
        left: 0.5rem;
        top: 0;
        bottom: 0;
        width: 2px;
        background: var(--accent-gradient);
        opacity: 0.6;
    }

    .expertise-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
    }

    .expertise-item {
        background: var(--card-bg);
        border-radius: var(--border-radius);
        padding: 1rem;
        box-shadow: var(--box-shadow);
        border-left: 2px solid;
        border-image: var(--accent-gradient) 1;
    }

    .contact-cta {
        text-align: center;
        margin-top: 2rem;
    }

    @media (min-width: 992px) {
        .content-wrapper {
            max-width: 1100px;
            margin-left: auto;
            margin-right: auto;
        }
    }
</style>
