<style>
    .page-header {
        position: relative;
        color: var(--light-text);
        padding: 7rem 0 3rem;
        text-align: center;
        background-image: url('../assets/Qualitaetskontrolle_kl.jpg');
        background-size: cover;
        background-position: center;
        margin-top: -1rem;
    }

    .header-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to right, rgba(18, 18, 18, 0.85), rgba(18, 18, 18, 0.75));
        z-index: 0;
    }

    .page-header h1 {
        position: relative;
        font-size: 3rem;
        font-weight: 700;
        z-index: 1;
        color: var(--light-text);
        display: inline-block;
    }

    .content-section {
        padding: 5rem 0;
        position: relative;
    }

    .content-section::before {
        content: none;
    }

    .content-wrapper {
        max-width: 900px;
        margin: 0 auto;
    }

    .section-header {
        text-align: left;
        margin-bottom: 2rem;
    }

    .section-header h2 {
        color: var(--light-text);
        font-size: 2rem;
        margin: 0;
    }

    .accent-line {
        width: 60px;
        height: 4px;
        background: var(--accent-gradient);
        border-radius: 10px;
        margin-top: 0.75rem;
    }

    p {
        color: var(--light-text);
        font-size: 1.05rem;
        line-height: 1.7;
        margin-bottom: 1.2rem;
    }

    .feature-list {
        list-style: none;
        padding: 0;
        margin: 1.5rem 0 2rem;
    }

    .feature-list li {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        color: var(--light-text);
    }

    .feature-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: var(--light-text);
        margin-top: 0.1rem;
        line-height: 1;
    }

    .feature-icon svg {
        width: 1.1rem;
        height: 1.1rem;
        fill: currentColor;
        display: block;
    }

    .info-card {
        background-color: var(--card-bg);
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        overflow: hidden;
        margin: 2rem 0 2.5rem;
        border: 1px solid rgba(255, 255, 255, 0.06);
    }

    .card-header {
        padding: 1.25rem 1.5rem;
        background: rgba(255, 255, 255, 0.04);
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    .card-header h3 {
        color: var(--light-text);
        margin: 0;
    }

    .card-body {
        padding: 1.25rem 1.5rem 1.5rem 1.5rem;
    }

    .btn {
        display: inline-block;
        padding: 0.75rem 2rem;
        background-color: var(--primary-color);
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
        margin-top: 1.5rem;
    }

    .btn:hover {
        background-color: var(--subtle-accent);
    }

    @media (min-width: 992px) {
        .content-wrapper {
            max-width: 1100px;
            margin-left: auto;
            margin-right: auto;
        }
    }
</style>
